<Window x:Class="FitnessTrainerApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="350" Width="400" Background="#f7f9fc" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="12" Background="White" Padding="20" Margin="20" BorderBrush="#ccc" BorderThickness="1">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Вхід до системи" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="0,10">
                <TextBlock Text="Ім'я користувача" Foreground="#555"/>
                <TextBox x:Name="UsernameBox" Height="35" Padding="10" Background="#f0f2f5" BorderThickness="1" BorderBrush="#ccc" />
            </StackPanel>

            <StackPanel Margin="0,10">
                <TextBlock Text="Пароль" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" Background="#f0f2f5" BorderThickness="1" BorderBrush="#ccc"/>
            </StackPanel>

            <Button Content="Увійти"
                    Click="Login_Click"
                    Background="#007ACC" Foreground="White"
                    Margin="0,15,0,10"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="Bold"/>

            <Button Content="Реєстрація"
                    Click="Register_Click"
                    Background="Transparent"
                    Foreground="#007ACC"
                    BorderBrush="#007ACC"
                    BorderThickness="1"
                    Height="35"
                    Cursor="Hand"
                    FontWeight="Bold"/>

        </StackPanel>
    </Border>
</Window>
