<Window x:Class="FitnessTrainerApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="300" Width="400" Background="#f7f9fc" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="12" Background="White" Padding="20" Margin="20" BorderBrush="#ccc" BorderThickness="1">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Реєстрація нового користувача" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="0,10">
                <TextBlock Text="Ім'я користувача" Foreground="#555"/>
                <TextBox x:Name="UsernameBox" Height="35" Padding="10" Background="#f0f2f5" BorderThickness="1" BorderBrush="#ccc" />
            </StackPanel>

            <StackPanel Margin="0,10">
                <TextBlock Text="Пароль" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" Background="#f0f2f5" BorderThickness="1" BorderBrush="#ccc"/>
            </StackPanel>

            <Button Content="Зареєструватися"
                    Click="Register_Click"
                    Background="#28a745"
                    Foreground="White"
                    Margin="0,15,0,0"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="Bold"/>

        </StackPanel>
    </Border>
</Window>
